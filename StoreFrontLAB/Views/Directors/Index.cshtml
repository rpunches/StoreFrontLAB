@model IEnumerable<SFL.DATA.EF.Director>

@{
    ViewBag.Title = " Directors";
}

<h2>@ViewBag.Title</h2>
<hr />
<h3 id="backHeader">
    <a href=" @Url.Action("Index", "Movies")"><i class="fas fa-long-arrow-alt-left"></i> List of Movies</a>
</h3>
@if (User.IsInRole("Admin"))
{
    <h3 id="createHeader">
        <a href=" @Url.Action("Create", "Directors")"><i class="fas fa-plus"></i> Director</a>
    </h3>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div style="margin: .3em; padding .1em; border-radius: 5px; min-width: 250px; text-align: center; max-width: fit-content;">
                <dl class="dl-horizontal">
                    <dd>
                        <a href="@Url.Action("Details", new { id = item.DirectorID})" title="@item.DirectorFullName">
                            <img src="~/Content/images/actorPlaceholder.png" alt="@item.DirectorFullName" style="max-width: 150px;" />

                    <dd><strong>@Html.DisplayFor(modelItem => item.DirectorFullName)</strong></dd>
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <dd>
                            @Html.ActionLink("Edit", "Edit", new { id = item.DirectorID }) |
                            @*@Html.ActionLink("Details", "Details", new { id = item.DirectorID }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.DirectorID })
                        </dd>
                    }
                    </dd>

                </dl>

            </div>
        </div>

    }
</div>
